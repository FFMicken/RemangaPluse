{
  "manifest_version": 3,
  "name": "ReManga User Status & Notifications+",
  "version": "1.1.0",
  "description": "Modular extension for ReManga (Firefox build)",
  "icons": {
    "48": "icon48.png"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://remanga.org/*",
    "https://api.remanga.org/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {},
  "browser_specific_settings": {
    "gecko": {
      "id": "remanga-plus-extension@ffmicken.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    },
    "gecko_android": {
      "strict_min_version": "142.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://remanga.org/*"],
      "js": [
        "scripts/utils.js",
        "scripts/online-status.js",
        "scripts/notifications.js",
        "scripts/inventory-upgrade.js",
        "scripts/main.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
